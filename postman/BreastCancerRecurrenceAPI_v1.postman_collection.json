  },
  "item": [
    {
      "name": "Get JWT Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "username",
              "value": "{{username}}"
            },
            {
              "key": "password",
              "value": "{{password}}"
            }
          ]
        },
        "url": {
          "raw": "http://127.0.0.1:8000/token",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "token"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Predict Recurrence (v1)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "let token = pm.collectionVariables.get(\"access_token\");",
              "let exp = pm.collectionVariables.get(\"access_token_exp\");",
              "let now = Math.floor(Date.now() / 1000);",
              "if (!token || !exp || now >= parseInt(exp)) {",
              "    pm.sendRequest({",
              "        url: 'http://127.0.0.1:8000/token',",
              "        method: 'POST',",
              "        header: { 'Content-Type': 'application/x-www-form-urlencoded' },",
              "        body: {",
              "            mode: 'urlencoded',",
              "            urlencoded: [",
              "                { key: 'username', value: pm.collectionVariables.get('username') },",
              "                { key: 'password', value: pm.collectionVariables.get('password') }",
              "            ]",
              "        }",
              "    }, function (err, res) {",
              "        if (!err) {",
              "            let json = res.json();",
              "            pm.collectionVariables.set(\"access_token\", json.access_token);",
              "            const decoded = JSON.parse(atob(json.access_token.split('.')[1]));",
              "            pm.collectionVariables.set(\"access_token_exp\", decoded.exp);",
              "        }",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"age\": 50,\n  \"menopause\": \"ge40\",\n  \"tumor_size\": \"30-34\",\n  \"inv_nodes\": \"0-2\",\n  \"node_caps\": \"no\",\n  \"deg_malig\": 2,\n  \"breast\": \"left\",\n  \"breast_quad\": \"left_low\",\n  \"irradiat\": \"no\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/v1/predict",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "v1",
            "predict"
          ]
        }
      },
      "response": []
    },
    {
