# API Key Auth (optional if using JWT exclusively)
API_KEY=YOURAPIKEY

# JWT Config
JWT_SECRET_KEY=YOURJWTKEY
ACCESS_TOKEN_EXPIRE_MINUTES=YOURTOKENTIIMEINMINUTES

# CORS Origins (comma-separated list for dev and prod)
# Parsed into a List[str] by BaseSettings automatically
MODEL_VERSION=v1
ALLOWED_ORIGINS=["http://localhost", "http://127.0.0.1", "http://localhost:8001"]

# Log Directory (optional, if dynamically configured)
LOG_DIR=logs
LOG_LEVEL=DEBUG    # Or DEBUG, WARNING, ERROR â€” for future flexibility
LOG_FILE_NAME=predecirapp.log
LOG_MAX_SIZE_MB=5
LOG_BACKUP_COUNT=3

# App
APP_NAME=YOUR API NAME
APP_VERSION=1.0
APP_PORT=8001
APP_HOST=0.0.0.0

# Runtime
DEBUG=True
ENV=development

# Mongo db connection details
MONGO_URI=YOUR MONGOURI
MONGO_DB_NAME=oncovista
MONGO_MAX_RETRIES=5
MONGO_RETRY_DELAY=3

# IAM API Integration
IAM_API_TOKEN_URL=YOUR TOKEN URL
IAM_API_VALIDATE_URL=YOUR VALIDATE URL
IAM_API_LOGOUT_URL=YOUR LOGOUT URL

# OAuth2
TOKEN_URL=/imagenes/auth/tokenlogin
